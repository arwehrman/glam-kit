<h1>Sign In</h1>
<!-- Don't like this form will change -->
<div>
<%= form_tag ({controller: 'sessions', action: 'create', method: 'post'}) do %>

  <label>First Name: </label>
  <%= text_field_tag 'user[first_name]' %><br><br>

  <label>Last Name: </label>
  <%= text_field_tag 'user[last_name]' %><br><br>

  <label>Username: </label>
  <%= text_field_tag 'user[username]' %><br><br>

  <label>Password: </label>
  <%= password_field_tag 'user[password]' %><br><br>


  <%= submit_tag "Sign In" %>

<% end %>
</div>
