<!--kits index-->
<h3>Welcome <%= current_user.name %></h3>

<h4>You have a total of <%= pluralize(@kits.count, "kit") %></h4>

  <p>Please select a kit from below to see more details.</p>
  <% @kits.each do |k| %>
  <%= link_to k.name, kit_path(k) %><br><br>
  <button class="js-more" data-id="<%= k.id %>">Preview Items</button><br><br>

 <table id=kitItemsTable style="display: none;"></table>
    <script id="kitItemsTemplate" type="text/x-handlebars-template" >
      <tr>
        <th>Name</th>
        <th>Brand</th>
        <th>Color</th>
      </tr>
      {{#each this}}
      <tr>
          <td>{{name}}</td>
          <td>{{brand}}</td>
          <td>{{color}}</td>
      </tr>
      {{/each}}
    </script>
  <% end %>
<%= link_to 'Add a New Kit', new_kit_path%><br>
<%= link_to 'Sign Out', signout_path, method: :delete %><br>

<p>Check out other users' items and ratings:</p>
<button class="js-allItems" data-id="">See All Items</button><br>
<div>
<table id="allItemsTable" style="display: none;"></table>
<script id="allItemsTemplate" type="text/x-handlebars-template">
  {{!-- Filter feature not implemented yet --}}
  <h3>Filter items by:</h3>
  <%= form_tag("/items", method: "get") do %>
    <%= label_tag "Category" %><%= select_tag "category", options_from_collection_for_select(@categories, "id", "name"), include_blank: true %>
    <%= label_tag "Rating" %><%= select_tag "rating", options_for_select(1..5), include_blank: true %>
    <%= submit_tag "Filter" %>
  <% end %>
  <tr>
    <th>Name</th>
    <th>Brand</th>
    <th>Color</th>
    <th>Rating</th>
    <th>Category</th>
    <th>Comment</th>
  </tr>
  {{#each this}}
  <tr>
      <td>{{name}}</td>
      <td>{{brand}}</td>
      <td>{{color}}</td>
      <td>{{rating}}</td>
      <td>{{category.name}}</td>
      <td>{{comment}}</td>
  </tr>
  {{/each}}
</script>
</div>
