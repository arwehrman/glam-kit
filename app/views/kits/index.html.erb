<!--kits index-->
<h3>Welcome <%= current_user.name %></h3>

<h4>You have a total of <%= pluralize(@kits.count, "kit") %></h4>

<div>
  <p>Please select a kit from below to see more details.</p>
  <% @kits.each do |k| %>
  <%= link_to k.name, kit_path(k) %><br><br>
  <button class="js-more" data-id="<%= k.id %>">Preview Items</button><br><br>
  <div id=kitItems>
    <script id="kititemsTemplate" type= "text/x-handlebars-template">
      {{#each this}}
      <tr>
          <td>{{name}}</td>
          <td>{{brand}}</td>
          <td>{{color}}</td>
      </tr>
      {{/each}}
    </script>
  </div>
  <% end %>
</div><br>

<%= link_to 'Add a New Kit', new_kit_path%><br>
<%= link_to 'Sign Out', signout_path, method: :delete %><br>

<p>Check out other users' items and ratings: <!--%= link_to 'See all Items', items_path%--> </p>
<button class="js-allItems" data-id="">See All Items</button><br><br>

<div id="itemstable"></div>
