<h1><%= @kit.name %></h1>
<h2><%= @kit.description %></h2>
<p><%= pluralize(@kit.items.count, "item")%> in this kit</p>
<table id="kitItems">
  <tr>
    <th>Name</th>
    <th>Brand</th>
    <th>Color</th>
    <th>Category</th>
    <th>Price</th>
    <th>Rating</th>
    <th>Comment</th>
  </tr>

  <tr>
    <% @kit.items.each do |i| %>
  </tr>
  <tr>
    <td><%= i.name %></td>
    <td><%= i.brand %></td>
    <td><%= i.color %></td>
    <td><%= i.category.name %></td>
    <td><%= number_to_currency(i.price) %></td>
    <td><%= i.rating %></td>
    <td><%= i.comment%></td>
    <td><%= button_to "Edit", edit_kit_item_path(@kit, i), method: :get%></td>
    <td><%= button_to "Delete", kit_item_path(@kit, i), method: :delete, data: { confirm: "Are you sure?" }%></td>

  </tr>
  <% end %>
</table>
<br>

<script id="itemTemplate" type= "text/x-handlebars-template">
<tr>
    <td>{{name}}</td>
    <td>{{brand}}</td>
    <td>{{color}}</td>
    <td>{{category}}</td>
    <td>${{price}}</td>
    <td>{{rating}}</td>
    <td>{{comment}}</td>
    <td><form class="button_to" method="get" action="/kits/<%= @kit.id %>/items/{{id}}/edit"><input type="submit" value="Edit"></form></td>
    <td><a data-confirm="Are you sure?" rel="nofollow" data-method="delete" href="/kits/<%= @kit.id %>/items/{{id}}">Delete</a>
  </tr>
</script>


<h3>Add Another Item</h3>
<%= render partial: "/items/form" %>

<%= link_to "Delete Kit", kit_path(@kit), method: :delete, data: { confirm: "Are you sure?" } %>
<%= link_to "Go Back to Kits", kits_path %><br><br>
