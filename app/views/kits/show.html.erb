<h1><%= @kit.name %></h1>

<table style="width:75%">
  <tr>
    <th>Name</th>
    <th>Brand</th>
    <th>Color</th>
    <th>Price</th>
    <th>Rating</th>
  </tr>

  <tr>
    <% @kit.items.each do |i| %>
  </tr>
  <tr>
    <td><%= i.name %></td>
    <td><%= i.brand %></td>
    <td><%= i.color %></td>
    <td><%= i.price %></td>
    <td><%= i.rating %></td>
      <td>edit</td>
      <td>delete</td>
  </tr>
  <% end %>
</table>
<p>Link to add another item</p>
<%= link_to "Delete Kit", user_kit_path(current_user, @kit), method: :delete, data: { confirm: "Are you sure?" }  %>
<%= link_to "Go Back to Kits", user_kits_path(current_user) %><br><br>

