<h1><%= @kit.name %></h1>

<table style="width:75%">
  <tr>
    <th>Name</th>
    <th>Brand</th>
    <th>Color</th>
    <th>Price</th>
    <th>Rating</th>
  </tr>

  <tr>
    <% @kit.items.each do |i| %>
  </tr>
  <tr>
    <td><%= i.name %></td>
    <td><%= i.brand %></td>
    <td><%= i.color %></td>
    <td><%= i.price.to_f %></td> <!-- don't like the format need to change -->
    <td><%= i.rating %></td>
      <td>edit</td> <!--this should be a link to edit item -->
      <td><%= link_to "Delete", i, method: :delete, data: { confirm: "Really?" } %></td><!--this should be a link to edit item -->
  </tr>
  <% end %>
</table>
<p>Link to add another item</p><!--need link to add another item -->
<%= link_to "Delete Kit", user_kit_path(current_user, @kit), method: :delete, data: { confirm: "Are you sure?" }  %>
<%= link_to "Go Back to Kits", user_kits_path(current_user) %><br><br>
