<!-- app/views/posts/index.html.erb -->

<h1>All Items</h1>
<div>
  <h3>Filter posts:</h3>
  <%= form_tag("/items", method: "get") do %>
    <%= select_tag "category", options_from_collection_for_select(@categories, "id", "name"), include_blank: true %>
    <%= select_tag "rating", options_for_select([1, 2, 3, 4, 5]), include_blank: true %>
    <%= submit_tag "Filter" %>
  <% end %>
</div>
<% @items.each do |i| %>
  <div>
    <p><%= i.name %></p>
    <p><%= i.category.name %></p>
    </p><%= i.rating %></p>
  </div>
<% end %>

<%= link_to "Go Back to Kits", kits_path %><br><br>
