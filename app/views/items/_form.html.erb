<%= form_for(@item) do |f| %>
  <%= f.label :name %>:
  <%= f.text_field :name %><br>
  <%= f.label :brand %>:
  <%= f.text_field :brand %><br>
  <%= f.label :color %>:
  <%= f.text_field :color %><br>
  <%= f.label :rating %>:
  <%= f.text_field :rating %><br>
  <%= f.label :price %>:
  <%= f.text_field :price %><br>
  <%= f.label :comment %>:
  <%= f.text_area :comment %><br>
  <%= f.label "Category" %>:
  <%= f.collection_select(:category_id, Category.all, :id, :name, :prompt => true) %>
  <%= f.hidden_field :kit_id, :value => @kit.id %>
<%= f.submit %>
<% end %>
