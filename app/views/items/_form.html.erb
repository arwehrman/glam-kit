<% if @item.errors.any? %>
  <div id="error_explanation">
    <h3>
      <%= pluralize(@item.errors.count, "error") %>
      prohibited this item from being added to kit:
    </h3>

    <ul>
    <% @item.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for [@kit, @item] do |f| %>
  <%= f.label :name %>:
  <%= f.text_field :name %><br>
  <%= f.label :brand %>:
  <%= f.text_field :brand %><br>
  <%= f.label :color %>:
  <%= f.text_field :color %><br>
  <%= f.label :rating %>:
  <%= f.select :rating, (1..5)%><br>
  <%= f.label :price %>:
  <%= f.text_field :price %><br>
  <%= f.label :comment %>:
  <%= f.text_area :comment %><br>
  <%= f.label "Category" %>:
  <%= f.collection_select(:category_id, Category.all, :id, :name, :prompt => true) %><br>
<%= f.submit %>
<% end %>
