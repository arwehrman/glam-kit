<%= form_for [@kit, @item] do |f| %>
  <%= f.label :name %>:
  <%= f.text_field :name %><br>
  <%= f.label :brand %>:
  <%= f.text_field :brand %><br>
  <%= f.label :color %>:
  <%= f.text_field :color %><br>
  <%= f.label :rating %>:
  <%= f.select :rating, (1..5)%><br>
  <%= f.label :price %>:
  <%= f.text_field :price %><br>
  <%= f.label :comment %>:
  <%= f.text_area :comment %><br>
  <%= f.label "Category" %>:
  <%= f.collection_select(:category_id, Category.all, :id, :name, :prompt => true) %>
<%= f.submit %>
<% end %>
